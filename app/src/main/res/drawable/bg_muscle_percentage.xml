<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FF6B6B" />
            <corners android:radius="16dp" />
        </shape>
    </item>
    <item
        android:bottom="-10dp"
        android:left="10dp"
        android:right="-10dp"
        android:top="10dp">
        <rotate
            android:fromDegrees="45"
            android:pivotX="0%"
            android:pivotY="100%">
            <shape android:shape="rectangle">
                <solid android:color="#FF6B6B" />
            </shape>
        </rotate>
    </item>
</layer-list>