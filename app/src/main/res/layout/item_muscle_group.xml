<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="16dp">

    <ImageView
        android:id="@+id/muscle_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_muscle_placeholder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/muscle_progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="-12dp"
        android:progress="59"
        android:progressTint="#FF6B6B"
        app:layout_constraintEnd_toEndOf="@+id/muscle_image"
        app:layout_constraintStart_toStartOf="@+id/muscle_image"
        app:layout_constraintTop_toBottomOf="@+id/muscle_image" />

    <TextView
        android:id="@+id/muscle_percentage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="59%"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/muscle_image"
        app:layout_constraintEnd_toEndOf="@+id/muscle_image"
        app:layout_constraintStart_toStartOf="@+id/muscle_image"
        app:layout_constraintTop_toTopOf="@+id/muscle_image" />

</androidx.constraintlayout.widget.ConstraintLayout>