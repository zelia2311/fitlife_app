<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".ui.fitness.FitnessAnalysisActivity">

    <!-- Header -->
    <TextView
        android:id="@+id/tv_analysis_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Activity Analysis"
        android:textColor="@color/text_primary"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Main Metric -->
    <TextView
        android:id="@+id/tv_main_metric"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="106.4"
        android:textColor="@color/text_primary"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_analysis_title" />

    <TextView
        android:id="@+id/tv_main_metric_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BPM"
        android:textColor="@color/text_secondary"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_main_metric"
        app:layout_constraintStart_toStartOf="@+id/tv_main_metric"
        app:layout_constraintTop_toBottomOf="@+id/tv_main_metric" />

    <!-- Heart Icon -->
    <ImageView
        android:id="@+id/iv_heart_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/btn_circle"
        android:backgroundTint="@color/modern_purple_light"
        android:padding="16dp"
        android:src="@drawable/ic_check" 
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_main_metric_unit" />

    <!-- Secondary Metrics -->
    <TextView
        android:id="@+id/tv_metric_1_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:text="90 BPM"
        android:textColor="@color/text_primary"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/iv_heart_icon"
        app:layout_constraintTop_toBottomOf="@+id/iv_heart_icon" />

    <TextView
        android:id="@+id/tv_metric_2_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:text="130 BPM"
        android:textColor="@color/text_primary"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/iv_heart_icon"
        app:layout_constraintTop_toBottomOf="@+id/iv_heart_icon" />

    <!-- Activity Report -->
    <TextView
        android:id="@+id/tv_report_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:text="Activity Report"
        android:textColor="@color/text_primary"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_metric_1_value" />

    <!-- Chart Placeholder -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_report_title">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Bar Chart Placeholder" />

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>